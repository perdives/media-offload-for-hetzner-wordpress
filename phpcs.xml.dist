<?xml version="1.0"?>
<ruleset xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="HetznerOffload" xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/squizlabs/PHP_CodeSniffer/master/phpcs.xsd">

    <description>WordPress Coding Standards for Hetzner Offload Plugin</description>

    <!-- What to scan -->
    <file>.</file>

    <!-- Exclude patterns -->
    <exclude-pattern>*/vendor/*</exclude-pattern>
    <exclude-pattern>*/node_modules/*</exclude-pattern>
    <exclude-pattern>*/tests/*</exclude-pattern>
    <exclude-pattern>*.js</exclude-pattern>
    <exclude-pattern>*.css</exclude-pattern>

    <!-- Show progress and sniff codes -->
    <arg value="ps"/>

    <!-- Strip the filepaths down to the relevant bit -->
    <arg name="basepath" value="./"/>

    <!-- Check up to 20 files simultaneously -->
    <arg name="parallel" value="20"/>

    <!-- Show colors in output -->
    <arg name="colors"/>

    <!-- Enables caching for better performance -->
    <arg name="cache" value=".phpcs.cache"/>

    <!-- Only check PHP files -->
    <arg name="extensions" value="php"/>

    <!-- Include the WordPress Coding Standards -->
    <rule ref="WordPress">
        <!-- Allow short array syntax -->
        <exclude name="Generic.Arrays.DisallowShortArraySyntax"/>

        <!-- We use PSR-4 autoloading so file names don't need class prefixes -->
        <exclude name="WordPress.Files.FileName.InvalidClassFileName"/>
        <exclude name="WordPress.Files.FileName.NotHyphenatedLowercase"/>
    </rule>

    <!-- Enforce WordPress naming conventions -->
    <rule ref="WordPress.NamingConventions.PrefixAllGlobals">
        <properties>
            <!-- Set the plugin prefix -->
            <property name="prefixes" type="array">
                <element value="perdives_mo"/>
                <element value="HetznerOffload"/>
                <element value="PERDIVES_MO"/>
            </property>
        </properties>
    </rule>

    <!-- Verify minimum PHP version -->
    <config name="testVersion" value="7.4-"/>
    <rule ref="PHPCompatibilityWP"/>

    <!-- Allow for theme specific exceptions to WordPress VIP rules -->
    <rule ref="WordPress-Extra">
        <!-- Allow direct database queries for plugin functionality -->
        <exclude name="WordPress.DB.DirectDatabaseQuery"/>
    </rule>

    <!-- Check for cross-version support -->
    <config name="minimum_supported_wp_version" value="5.0"/>

    <!-- Verify that everything is documented -->
    <rule ref="WordPress-Docs">
        <!-- Allow missing package tags temporarily during refactoring -->
        <exclude name="Squiz.Commenting.FileComment.MissingPackageTag"/>
    </rule>

    <!-- Make missing translator comments a warning -->
    <rule ref="WordPress.WP.I18n.MissingTranslatorsComment">
        <type>warning</type>
    </rule>

    <!-- Sometimes we need to override globals -->
    <rule ref="WordPress.WP.GlobalVariablesOverride.Prohibited">
        <type>warning</type>
    </rule>

</ruleset>
